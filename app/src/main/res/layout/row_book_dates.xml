<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/checkInTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check In: "/>

    <TextView
        android:id="@+id/checkInTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/checkInTitle"/>

    <TextView
        android:id="@+id/checkOutTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check out: "
        android:layout_below="@+id/checkInTitle"/>

    <TextView
        android:id="@+id/checkOutTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkInTime"
        android:layout_toEndOf="@+id/checkOutTitle"/>

    <TextView
        android:id="@+id/userTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user: "
        android:layout_below="@+id/checkOutTitle"/>

    <TextView
        android:id="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/userTitle"
        android:layout_below="@+id/checkOutTime"/>
</RelativeLayout>